<header>
  <div class="header_title">
    MovieReviews!
  </div>
  <% if user_signed_in? %>
    <%= link_to "Let's Post!", '/messages/new', class: 'a'%>
    <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'a'%>
  <% else %>
    <%= link_to "Log In", new_user_session_path, class: 'a' %>
    <%= link_to "Sign Up", new_user_registration_path, class: 'a' %>
  <% end %>
</header>

<div class="contents">
  <% @messages.each do |message| %>
    <%= render partial: "messages", locals: { message: message } %>
  <% end %>
</div>

<footer>
  copylight : matsumoto
</footer>
